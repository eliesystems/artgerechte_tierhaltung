generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id    String  @id @default(uuid()) @db.Uuid
  farms farms[]
}

model farms {
  id               String    @id @default(uuid()) @db.Uuid
  fk_user_id       String    @db.Uuid
  name             String
  zip_code         Int?
  place            String?
  person_in_charge String?
  user             users     @relation(fields: [fk_user_id], references: [id], onDelete: Cascade)
  answers          answers[]
}

model answers {
  id                   Int	        @id @default(autoincrement())
  farm_id              String       @db.Uuid
  question_key         String
  section              section_enum
  string_answer        String?
  string_array_answer  String[]
  numeric_answer       Int?
  numeric_array_answer Int[]
  file_url             String?
  last_modified        DateTime     @default(now()) @db.Timestamptz
  farm                 farms        @relation(fields: [farm_id], references: [id], onDelete: Cascade)
}

enum section_enum {
  resources
  management
  animal_welfare
}
